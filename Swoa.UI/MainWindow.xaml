            x:Name="celestialMap"
            Grid.Row="1"
            Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
            Height="Auto"
            MinWidth="300"
            MinHeight="300"
            Margin="20"
            DataContext="{Binding CelestialObjectManagerVM}" />
