<UserControl
    x:Class="Swoa.UI.CelestialMap"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Swoa.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="celestialMap"
    d:DesignHeight="360"
    d:DesignWidth="360"
    RenderTransformOrigin="0.5,0.5"
    mc:Ignorable="d">
    <UserControl.RenderTransform>
        <TransformGroup>
            <ScaleTransform ScaleY="-1" ScaleX="-1" />
        </TransformGroup>
    </UserControl.RenderTransform>

    <Grid>

        <Ellipse
            Width="360"
            Height="360"
            Fill="#2e3f5c"
            Stroke="Yellow"
            StrokeThickness="1" />

        <Ellipse
            Stroke="Black"
            StrokeThickness="1"
            Width="180"
            Height="180"
            />

        <Ellipse
            Stroke="Black"
            StrokeThickness="1"
            Width="120"
            Height="120"
            />


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Rectangle Height="50" Width="5" Fill="Yellow" HorizontalAlignment="Center"/>
            <Rectangle Width="10" Height="5" Fill="Red"/>
        </StackPanel>

        <Ellipse
            Canvas.Left="177.5"
            Canvas.Top="177.5"
            Width="5"
            Height="5"
            Fill="Pink" />
        
        <ItemsControl x:Name="mainItemsControl" ItemsSource="{Binding CelestialObjects}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Ellipse
                        Width="5"
                        Height="5"
                        Fill="LightBlue" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Left" Value="{Binding YPos}" />
                    <Setter Property="Canvas.Top" Value="{Binding XPos}" />
                    <Setter Property="Panel.ZIndex" Value="10"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>

    </Grid>
</UserControl>
